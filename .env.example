# Application
NODE_ENV=production
PORT=8080

# User/Group ID for container (match your host user, run `id` to check)
PUID=1000
PGID=1000

# NextAuth Secret (REQUIRED - generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-secret-here-change-in-production
NEXTAUTH_URL=http://localhost:8080

# Database Configuration â€” SQLite (built-in)
SQLITE_FILE=/data/fauxdash.db

# Redis Configuration
REDIS_ENABLED=true
REDIS_URL=redis://redis:6379

# SMTP Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@fauxdash.local

# OIDC Configuration (optional)
OIDC_ENABLED=false
OIDC_ISSUER=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_ADMIN_ONLY=false

# Weather API Configuration
# Options: tempest, weatherapi, openweather
WEATHER_PROVIDER=weatherapi

# Tempest Weather API
TEMPEST_API_KEY=
TEMPEST_STATION_ID=

# WeatherAPI.com
WEATHERAPI_KEY=

# OpenWeatherMap
OPENWEATHER_KEY=

# GeoIP Configuration (for visitor location analytics)
# Options: disabled, maxmind, ipinfo, chain
# GEOIP_PROVIDER=maxmind

# MaxMind GeoLite2 (free, requires account)
# Get license key at: https://www.maxmind.com/en/geolite2/signup
# GEOIP_MAXMIND_DB_PATH=/data/GeoLite2-City.mmdb
# GEOIP_MAXMIND_ACCOUNT_ID=
# GEOIP_MAXMIND_LICENSE_KEY=

# ipinfo.io (free tier: 50,000 lookups/month)
# Get token at: https://ipinfo.io/signup
# GEOIP_IPINFO_TOKEN=

# Default Settings
DEFAULT_SEARCH_ENGINE=duckduckgo
DEFAULT_THEME=system
WEATHER_LOCATIONS=90210
WEATHER_AUTO_ROTATE_SECONDS=30
