# Application
NODE_ENV=production
PORT=8080
APP_URL=http://localhost:8081

# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-secret-here-change-in-production
NEXTAUTH_URL=http://localhost:8081

# Database Configuration
# Options: sqlite, postgres, mysql
DB_PROVIDER=sqlite

# SQLite (default)
SQLITE_FILE=/data/fauxdash.db

# PostgreSQL (if DB_PROVIDER=postgres)
# DB_URL=postgresql://user:password@localhost:5432/fauxdash

# MySQL (if DB_PROVIDER=mysql)
# DB_URL=mysql://user:password@localhost:3306/fauxdash

# Redis Configuration
REDIS_ENABLED=true
REDIS_URL=redis://redis:6379

# SMTP Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@fauxdash.local

# OIDC Configuration (optional)
OIDC_ENABLED=false
OIDC_ISSUER=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_ADMIN_ONLY=false

# Weather API Configuration
# Options: tempest, weatherapi, openweather
WEATHER_PROVIDER=weatherapi

# Tempest Weather API
TEMPEST_API_KEY=
TEMPEST_STATION_ID=

# WeatherAPI.com
WEATHERAPI_KEY=

# OpenWeatherMap
OPENWEATHER_KEY=

# Default Settings
DEFAULT_SEARCH_ENGINE=duckduckgo
DEFAULT_THEME=system
WEATHER_LOCATIONS=90210
WEATHER_AUTO_ROTATE_SECONDS=30
