# Local development environment variables
# Copy this file to .env.local for local development

# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=development-secret-change-in-production
NEXTAUTH_URL=http://localhost:3000

# Database Configuration â€” SQLite (built-in)
SQLITE_FILE=./fauxdash.db

# Redis Configuration (optional for local dev)
REDIS_ENABLED=false

# Weather API Configuration
WEATHER_PROVIDER=weatherapi
WEATHERAPI_KEY=your_weatherapi_key_here
WEATHER_LOCATIONS=90210
WEATHER_AUTO_ROTATE_SECONDS=30

# Search Engine
NEXT_PUBLIC_DEFAULT_SEARCH_ENGINE=duckduckgo

# Theme
NEXT_PUBLIC_DEFAULT_THEME=system

# Weather Locations (exposed to client)
NEXT_PUBLIC_WEATHER_LOCATIONS=90210
NEXT_PUBLIC_WEATHER_AUTO_ROTATE_SECONDS=30
